{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "#config/*": ["src/config/*"],
      "#controllers/*": ["src/controllers/*"],
      "#repositories/*": ["src/repositories/*"],
      "#services/*": ["src/services/*"],
      "#middlewares/*": ["src/middlewares/*"],
      "#models/*": ["src/models/*"],
      "#routes/*": ["src/routes/*"],
      "#utils/*": ["src/utils/*"],
      "#types/*": ["src/types/*"],
      "#root/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules"]
}